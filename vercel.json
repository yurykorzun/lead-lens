{
  "buildCommand": "npm run build -w @lead-lens/shared && npm run build -w @lead-lens/client",
  "outputDirectory": "client/dist",
  "framework": null,
  "functions": {
    "api/[...path].ts": {
      "maxDuration": 30
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/[...path]" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
