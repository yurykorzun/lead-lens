{
  "name": "lead-lens",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "server",
    "client"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=server\" \"npm run dev --workspace=client\"",
    "build": "npm run build --workspace=packages/shared && npm run build --workspace=server && npm run build --workspace=client",
    "typecheck": "tsc --build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "npm run test --workspace=packages/shared && npm run test --workspace=server",
    "test:e2e": "npx tsx e2e/staging/global-setup.ts && playwright test; npx tsx e2e/staging/global-teardown.ts",
    "staging:server": "npx tsx server/src/staging.ts",
    "staging:client": "VITE_API_TARGET=http://localhost:3002 npm run dev --workspace=client -- --port 5174",
    "staging": "concurrently \"npm run staging:server\" \"npm run staging:client\"",
    "reset:staging": "npx tsx e2e/staging/global-setup.ts",
    "seed:staging": "npx tsx server/src/seed-staging.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.2",
    "concurrently": "^9.1.2",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "typescript": "5.7.3",
    "typescript-eslint": "^8.55.0"
  }
}
